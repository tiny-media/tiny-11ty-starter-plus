<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="utf-8">
    <meta name="generator" content="{{ eleventy.generator }}">
    <title>
      {% if title %}
        {{ title | escape }} -
      {% endif %}
      {{ metadata.title | escape }}
    </title>

    <meta name="description" content="{% if description %}{{ description | strip_html | strip_newlines | truncate: 160 }}{% else %}{{ site.description }}{% endif %}">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="view-transition" content="same-origin" />

      <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{ metadata.url }}{{ page.url }}">
    <meta property="og:title" content="{% if title %}{{ title }} - {% endif %}{{ metadata.title }}">
    <meta property="og:description" content="{% if description %}{{ description }}{% else %}{{ metadata.description }}{% endif %}">
    <meta property="og:image" content="{{ metadata.url }}/images/og-image.jpg">

      <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="{{ metadata.url }}{{ page.url }}">
    <meta property="twitter:title" content="{% if title %}{{ title }} - {% endif %}{{ metadata.title }}">
    <meta property="twitter:description" content="{% if description %}{{ description }}{% else %}{{ metadata.description }}{% endif %}">
    <meta property="twitter:image" content="{{ metadata.url }}/images/og-image.jpg">

    <!-- Stylesheets -->
    {%- if styles -%}
      {% for style in styles %}
        <link
          rel="stylesheet"
          href={{ style | prepend: "/css/" }}
          media="all">
      {% endfor %}
    {%- endif -%}


    <!-- JavaScript -->
    {%- if scripts -%}
      {% for script in scripts %}
        <script
          src={{ script | prepend: "/js/" }}
          type="module"
          defer></script>
      {% endfor %}
    {%- endif -%}
  </head>

  <body class="{% if darkMode %}dark-mode{% endif %}">

    <section id="Header-Section">
      {% render "header" %}
    </section>

    <section id="main-section">
      <main>
        {{ content }}
      </main>
    </section>

    <section id="Footer-Section">
      {% render "footer" %}
    </section>
  </body>
</html>